<h1>Edit Order / Delivery Days</h1>
<%= form_for @order_day, :url => supplier_order_day_path(@supplier, @order_day), :method => :put do |f| %>
  <label for 'day'>Order Day</label>
  <%= f.select("day", @days_of_week, :selected => "monday") %>
  <label for 'day'>Delivery Day</label>
  <%= f.text_field 'duration', :placeholder => '(ex: mon - wed is "2" days)', :class => 'small-9', :type => 'number', :min => 0 %>
  <%= f.submit 'update order delivery day', :class => 'button' %>
<% end %>